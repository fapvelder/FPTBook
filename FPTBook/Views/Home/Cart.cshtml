
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FPTBook.Models
<h2>Cart</h2>
<table cellpadding="2" cellspacing="2" border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Buy</th>

    </tr>
    @foreach (Book p in ViewBag.listProducts)
            {
<tr>
    <td>@p.ID</td>
    <td>@p.Name</td>
    <td>@p.Price</td>
    <td align="center">@Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = @p.ID }, null)  </td>
</tr>
            }
</table>
